<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/tv_marginbox"
        android:layout_width="30dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/tv_otherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/tv_marginbox"
        android:layout_toRightOf="@+id/tv_marginbox"
        android:text="username" />

    <TextView
        android:id="@+id/tv_otherMessage"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_otherName"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_marginbox"
        android:layout_toRightOf="@+id/tv_marginbox"
        android:background="#00BCD4"
        android:text="message" />

    <TextView
        android:id="@+id/tv_reciveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="64dp"
        android:layout_toEndOf="@+id/tv_reciveDate"
        android:layout_toRightOf="@+id/tv_reciveDate"
        android:text="11:11" />

    <TextView
        android:id="@+id/tv_reciveDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:layout_toEndOf="@+id/tv_otherMessage"
        android:layout_toRightOf="@+id/tv_otherMessage"
        android:text="2020-01-01" />
</RelativeLayout>