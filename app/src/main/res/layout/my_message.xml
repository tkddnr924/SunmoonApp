<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_marginBox"
        android:layout_width="42dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_toStartOf="@+id/tv_marginBox"
        android:layout_toLeftOf="@+id/tv_marginBox"
        android:text="username" />

    <TextView
        android:id="@+id/tv_myMessage"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_myName"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_toStartOf="@+id/tv_marginBox"
        android:layout_toLeftOf="@+id/tv_marginBox"
        android:background="#FFEB3B"
        android:text="message"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_sendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/tv_myMessage"
        android:layout_toLeftOf="@+id/tv_myMessage"
        android:text="11:11" />

    <TextView
        android:id="@+id/tv_sendDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toStartOf="@+id/tv_sendTime"
        android:layout_toLeftOf="@+id/tv_sendTime"
        android:text="2020-01-01" />
</RelativeLayout>